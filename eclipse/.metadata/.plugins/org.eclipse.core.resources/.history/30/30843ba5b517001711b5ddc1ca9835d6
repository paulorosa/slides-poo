package Atividade1;

import Atividade2.SequenciaNumerica;

/**
 *
 * @author Anderson James
 */
public class ProgressaoGeometrica {

    
private int razao; 
   private int valorInicial;
    
    
    
    
    public ProgressaoGeometrica(  int valorInicial, int razao) {
    
        this.razao = razao;
        this.valorInicial = valorInicial;
        
     
        
        
        
    }

  public void proximoValor() {

   this.valorInicial=valorInicial * razao;
    }
    
    
    
    
    

    public int valorAtual() {
      
        
   return valorInicial;
        
        
     
        
        
    }
}

   