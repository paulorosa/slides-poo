package parte1;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.InputStreamReader;

public class RelatorioNotas {

	
	public void calcularMedia(String filename) throws Exception {
		// ler dados do arquivo e armazenar em objetos Aluno
		// calcular m√©dia
		FileInputStream stream = new FileInputStream("arquivo.txt");
		InputStreamReader reader = new InputStreamReader(stream);
		BufferedReader br = new BufferedReader(reader);
		String linha = br.readLine();
		while(linha != null) {
		   String nome = linha.substring(0, linha.indexOf('|'));
		   String cidade = linha.substring(linha.indexOf('|') + 1, linha.lastIndexOf('|'));
		   String compras = linha.substring(linha.lastIndexOf('|') + 1, linha.length());
		   System.out.println(nome);
		   System.out.println(cidade);
		   System.out.println(compras);
		   linha = br.readLine();
		}
	}

	
	
	
	
	
	
	public static void main(String[] args) throws Exception {
		String filename = args[0];
		
		RelatorioNotas relatorioNotas = new RelatorioNotas();
		relatorioNotas.calcularMedia(filename);
	}

}
